{% extends 'base.html.twig' %}

{% block title %}
	Home
{% endblock %}

{% block body %}
	<style>
		

		.avis {
			background-image: url('/img/bg2.jpg');
		}
		.contact {
			background-image: url('/img/img-form.jpg');
			padding-bottom: 150px;
		}
		.form {
			margin: 84px;
			width: 500px;
			background: #fff;
			box-shadow: 5px 15px 50px rgba(0, 0, 0, 0.8);

		}
		.inputboite {
			position: relative;
			width: 100%;
			margin-bottom: 20px;
		}
		textarea {
			width: 40%;
		}

	</style>
	{# Section Diaporama #}
	<section>

		<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="https://a.cdn-hotels.com/gdcs/production88/d804/e87b353a-6c67-48a9-800e-e43c8826a51b.jpg?impolicy=fcrop&w=1200&h=675&q=medium" class="d-block w-100" alt="diapo1">
				</div>
				<div class="carousel-item">
					<img src="https://uploads.lebonbon.fr/source/2021/september/42390/gastro_2_1200.jpg" class="d-block w-100" alt="diapo2">
				</div>
				<div class="carousel-item">
					<img src="https://assets.afcdn.com/story/20230306/2212166_w1888h1060c1cx1057cy587cxt0cyt0cxb2121cyb1277.webp" class="d-block w-100" alt="diapo3">
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>

	</section>

	{# Section Les Favoris #}
	<section class="d-flex flex-column align-items-center my-5">
		<h2>
			<span>M</span>enu</h2>
		<p>Bon Appétit et surtout régalez vous!
		</p>
		<h2>Les Favoris</h2>

		<h2 class="mt-5">Les Entrées:</h2>
		<div class="trait"></div>

		{# Boucle Entrées #}
			<div class="d-flex flex-row flex-wrap justify-content-center">
				{% for product in entrees %}
					<div class="containeur_produit">
						<div class="card-body d-flex flex-column align-items-center">
							<h5 class="card-title">{{ product.title }}</h5>
							<img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">
							<p class="fs-6">Ingrédients:
								{{ product.description }}</p>
								<div class="d-flex flex-row gap-5">
							<p>{{ product.price }}
								€</p>
							<a href="{{path('cart_add',{id:product.id}) }}">
								<button>
									<i class="fa-solid fa-cart-shopping position-relative"></i>
								</button>
							</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>


		<h2 class="mt-5">Les Plats:</h2>
		<div class="trait"></div>

		{# Boucle Plats #}
			<div class="d-flex flex-row flex-wrap justify-content-center">
				{% for product in plats %}
					<div class="containeur_produit">
						<div class="card-body d-flex flex-column align-items-center">
							<h5 class="card-title">{{ product.title }}</h5>
							<img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">
							<p class="fs-6">Ingrédients:
								{{ product.description }}</p>
								<div class="d-flex flex-row gap-5">
							<p>{{ product.price }}
								€</p>
							<a href="{{path('cart_add',{id:product.id}) }}">
								<button>
									<i class="fa-solid fa-cart-shopping position-relative"></i>
								</button>
							</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>


		<h2 class="mt-5">Les Desserts:</h2>
		<div class="trait"></div>

		{# Boucle Desserts #}
			<div class="d-flex flex-row flex-wrap justify-content-center">
				{% for product in desserts %}
					<div class="containeur_produit">
						<div class="card-body d-flex flex-column align-items-center">
							<h5 class="card-title">{{ product.title }}</h5>
							<img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">
							<p class="fs-6">Ingrédients:
								{{ product.description }}</p>
								<div class="d-flex flex-row gap-5">
							<p>{{ product.price }}
								€</p>
							<a href="{{path('cart_add',{id:product.id}) }}">
								<button>
									<i class="fa-solid fa-cart-shopping position-relative"></i>
								</button>
							</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

	</section>


	{# Section Nos Experts #}
	<section class="text-center my-5">
		<h2>Nos
			<span>E</span>xperts</h2>
		<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.
		</p>

		<div class="d-flex justify-content-center flex-wrap">
			<figure>
				<img src={{ asset('img/equipe1.jpg') }}>
				<figcaption>Kacha</figcaption>
			</figure>
			<figure>
				<img src={{ asset('img/equipe2.jpg') }}>
				<figcaption>Paola Carosella</figcaption>
			</figure>
			<figure>
				<img src={{ asset('img/equipe3.jpg') }}>
				<figcaption>Shelina Permalloo</figcaption>
			</figure>
			<figure>
				<img src={{ asset('img/equipe4.jpg') }}>
				<figcaption>Samuel Lee Sum</figcaption>
			</div>
		</figure>
	</section>


	{# Section Avis Client #}
	<section
		class="example-wrapper">
		{# reviews start #}
		<h2 class="text-center my-5">
			Que Disent Nos
			<span>C</span>lients</h2>
		<p class="text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>

		<div class="avis">
			<div class="d-flex flex-wrap justify-content-center">
				{% for item in reviews %}
					{% set note = item.note %}
					<div class="card m-3 ">
						<div class="card-body ">
							<h5 class="card-title">{{item.name }}</h5>

							<p class="card-text">{{item.message}}</p>
							<p>publie le :
								{{ item.DatePublication|date('Y-m-d')}}</p>
							<p>Avis client :
								<br>
								{% for star in 1..note %}
									⭐
								{% endfor %}
							</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>


	{# Section Contact #}
	<section class="contact text-center">

		<h1 class="pt-4 pb-4">
			<span>C</span>ontactez-nous
		</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success" role="alert">{{ message }}</div>
		{% endfor %}

		<div class="d-flex form justify-content-center m-auto p-5">
			{{ form_start(contactForm) }}

			<div
				class="mb-3 d-flex flex-row flex-nowrap gap-2">
				{# Prenom #}
				{{ form_widget(contactForm.Prenom, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(contactForm.Prenom) }}

				{# Nom #}
				{{ form_widget(contactForm.Nom, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(contactForm.Nom) }}
			</div>

			<div
				class="mb-3 d-flex flex-row flex-nowrap gap-2">
				{# Email#}
				{{ form_widget(contactForm.Email, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(contactForm.Email) }}

				{# Telephone #}
				{{ form_widget(contactForm.Telephone, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(contactForm.Telephone) }}
			</div>
			<div
				class="mb-3">
				{# Sujet #}
				{{ form_widget(contactForm.Sujet, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(contactForm.Sujet) }}
			</div>
			<div
				class="mb-3 h-55">
				{# Message #}
				{{ form_widget(contactForm.Message, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(contactForm.Message) }}
			</div>
			{{ form_end(contactForm) }}
		</div>
	{% endblock %}
