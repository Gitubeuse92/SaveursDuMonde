<h1 class="pt-4">
    <span>C</span>ontactez-nous
</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success" role="alert">{{ message }}</div>
		{% endfor %}

		<div class="d-flex form p-3 justify-content-center m-auto pt-5 pb-5">
			{{ form_start(contactForm) }}

