{% for flashMessage in app.flashes('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}



{{ form_start(form, {'attr': {'class': 'my-4 text-center'}}) }}

<div class="mb-3">
    {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.name, {'attr': {'class': 'form-control mx-auto', 'style': 'width: 50%;'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.phone, 'Numéro de téléphone', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.phone, {'attr': {'class': 'form-control mx-auto', 'style': 'width: 50%;'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.mail, 'Mail', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.mail, {'attr': {'class': 'form-control mx-auto', 'style': 'width: 50%;'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.date, {'attr': {'class': 'form-control mx-auto', 'style': 'width: 50%;'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.numberPerson, 'Nombre de personnes', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.numberPerson, {'attr': {'class': 'form-control mx-auto', 'style': 'width: 50%;'}}) }}
</div>

<div class="mb-3">
    {{ form_label(form.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.message, {'attr': {'class': 'form-control mx-auto', 'style': 'width: 50%;'}}) }}

<button class="btn-centered mt-4">{{ button_label|default('Envoyer') }}</button>

{{ form_end(form) }}



