{% extends 'base.html.twig' %}

{% block title %}La Carte{% endblock %}

{% block body %}

<div class="d-flex flex-column align-items-center">

 <h1 class="mt-5">La Carte</h1>
    <p>Régalez-vous avec les délices de: Chine, Cameroun, Brésil et île Maurice!</p>
<div class="trait"></div>

<table class="table-responsive">
  <thead>
    <tr class="p-5">
      <th scope="col">Menu</th>
      <th scope="col">Entrée</th>
      <th scope="col">Prix</th>
      
    </tr>
  </thead>
  <div>
			<div class="d-flex flex-wrap justify-content-center">
				{% for item in entrees %}
					{% set type = item.type %}
					<div class="containeur_produit">
						<h5 class="card-title d-flex justify-content-center">{{item.title }}</h5>
						<img src="{{ asset('img/products')}}/{{ item.image }}" class="card-img" alt="{{ item.title }}">
						<label for="quantity">Nombre d'entrées:</label>
						<p>{{item.price}}€</p>
						<input type="number" id="quantity" name="quantity" min="1" max="20"/>
						<button onclick="">
							<i class="fa-solid fa-cart-shopping position-relative"></i>
						</button>
					</div>
				{% endfor %}
			</div>
  <tbody>
    <tr>
      
      <td>Mark</td>
      <td>Otto</td>
      <td>@mdo</td>
    </tr>
    <tr>
      
      <td>Jacob</td>
      <td>Thornton</td>
      <td>@fat</td>
    </tr>
    <tr>
     
      <td colspan="2">Larry the Bird</td>
      <td>@twitter</td>
    </tr>
  </tbody>
</table>

</div>
{% endblock %}
