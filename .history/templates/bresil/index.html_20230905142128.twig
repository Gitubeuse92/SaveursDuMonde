{% extends 'base.html.twig' %}

{% block title %}Saveurs Brésiliennes{% endblock %}
{% block body %}
<style>
    /* .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; } */
    div{
        text-align:center;
    }
</style>


<div>
            <div>
				<img class="bg" src={{ asset('img/background-bresil_1200x600.jpg') }}>
			</div>
            
 <h1>Saveurs Brésiliennes</h1>

	{# Section Les Entrées #}
	<section class="d-flex flex-column align-items-center my-5">
		<h2>
			<span>M</span>enu</h2>
		<p>Bon Appétit et surtout régalez vous!
		</p>
		<h2>Les Entrées:</h2>
		<div class="trait"></div>


<div class="d-flex flex-wrap justify-content-center">
   {% for product in entrees %}
        <div class="card m-5" style="width: 20rem;">
            <div class="card-body">
                <img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">
                <h5 class="card-title">{{ product.title }}</h5>
                <p>type: {{ product.type }}</p>
                <p>categorie: {{ product.category }}</p>
                <p>prix: {{ product.price }} €</p>
                
            </div>
        </div>
    {% endfor %}
</div>
{# Section Les plats #}
<h2 class="mt-5">Plats:</h2>
<div class="trait"></div>
<div class="containeur_produit">
   {% for product in plats %}
     
            <div class="card-body">
            <h5 class="card-title">{{ product.title }}</h5>
                <img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">
                <p class="fs-6">Ingrédients: {{ product.description }}</p>
                <p>prix: {{ product.price }} €</p>
                
        </div>
    {% endfor %}
    
</div>

{# Section Les dessert #}
<h2 class="mt-5">Desserts:</h2>
<div class="trait"></div>
<div class="d-flex flex-wrap justify-content-center">
   {% for product in desserts %}
        <div class="card m-5" style="width: 20rem;">
            <div class="card-body">
                <img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">
                <h5 class="card-title">{{ product.title }}</h5>
                <p>type: {{ product.type }}</p>
                <p>categorie: {{ product.category }}</p>
                <p>prix: {{ product.price }} €</p>
                
            </div>
        </div>
    {% endfor %}
</div>


	</section>
{% endblock %}