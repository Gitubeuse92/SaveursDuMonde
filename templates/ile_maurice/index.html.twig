                <p>prix: {{ product.price }} €</p>
                 <p>Nombre d'entrées:</p>
            <input
              type="number"
              id="quantity"
              name="quantity"
              min="1"
              max="20"
            />
            <button onclick=""><i class="fa-solid fa-cart-shopping position-relative">
								</i></button>
        </div>
    {% endfor %}
</div>
