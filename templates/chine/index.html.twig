{% extends 'base.html.twig' %}

{% block title %}Saveurs Chinoises
{% endblock %}
{% block body %}
	<style>
		/* .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; } */
		div {
			text-align: center;
		}
		section{
			margin-bottom: 250px;
		}
	</style>


	<div>
		<div>
			<img class="bg" src={{ asset('img/background-chine_1200x600.jpg') }}>
		</div>

		<h1>Saveurs Chinoises</h1>

		{# Section Les Entrées #}
		<section class="d-flex flex-column align-items-center my-5">
			<h2>
				<span>M</span>enu</h2>
			<p>Bon Appétit et surtout régalez vous!
			</p>
			<h2>Les Entrées:</h2>
			<div class="trait"></div>

			{# Boucle Entrées #}
			<div class="d-flex flex-row flex-wrap justify-content-center">
				{% for product in entrees %}
					<div class="containeur_produit">
						<div class="card-body d-flex flex-column align-items-center">
							<h5 class="card-title">{{ product.title }}</h5>
							<img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">
							<p class="fs-6">Ingrédients:
								{{ product.description }}</p>
							<div class="d-flex flex-row gap-5">
							<p>{{ product.price }}
								€</p>
							<a href="{{path('cart_add',{id:product.id}) }}">
								<button>
									<i class="fa-solid fa-cart-shopping position-relative"></i>
								</button>
							</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>

			{# Section Les plats #}
			<h2 class="mt-5">Les Plats:</h2>
			<div class="trait"></div>

			{# Boucle Plats #}
			<div class="d-flex flex-row flex-wrap justify-content-center">
				{% for product in plats %}
					<div class="containeur_produit">
						<div class="card-body d-flex flex-column align-items-center">
							<h5 class="card-title">{{ product.title }}</h5>
							<img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">
							<p class="fs-6">Ingrédients:
								{{ product.description }}</p>
							<div class="d-flex flex-row gap-5">
							<p>{{ product.price }}
								€</p>
							<a href="{{path('cart_add',{id:product.id}) }}">
								<button>
									<i class="fa-solid fa-cart-shopping position-relative"></i>
								</button>
							</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>

			{# Section Les desserts #}
			<h2 class="mt-5">Les Desserts:</h2>
			<div class="trait"></div>

		{# Boucle Desserts #}
			<div class="d-flex flex-row flex-wrap justify-content-center">
				{% for product in desserts %}
					<div class="containeur_produit">
						<div class="card-body d-flex flex-column align-items-center">
							<h5 class="card-title">{{ product.title }}</h5>
							<img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">
							<p class="fs-6">Ingrédients:
								{{ product.description }}</p>
							<div class="d-flex flex-row gap-5">
							<p>{{ product.price }}
								€</p>
							<a href="{{path('cart_add',{id:product.id}) }}">
								<button>
									<i class="fa-solid fa-cart-shopping position-relative"></i>
								</button>
							</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
</section>{% endblock %}
