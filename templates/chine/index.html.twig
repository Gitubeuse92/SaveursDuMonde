{% extends 'base.html.twig' %}

{% block title %}Saveurs Chinoises{% endblock %}
{% block body %}
<style>
    /* .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; } */
    div{
        text-align:center;
    }
</style>


<div>
            <div>
				<img class="bg" src={{ asset('img/background-chine_1200x600.jpg') }}>
			</div>
            
 <h1>Saveurs Chinoises</h1>

	{# Section Les Entrées #}
	<section class="d-flex flex-column align-items-center my-5">
		<h2>
			<span>M</span>enu</h2>
		<p>Bon Appétit et surtout régalez vous!
		</p>
		<h2>Les Entrées:</h2>
		<div class="trait"></div>


<div class="containeur_produit">
   {% for product in entrees %}
            <div class="card-body">
            <h5 class="card-title">{{ product.title }}</h5>
                <img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">
                <p class="fs-6">Ingrédients: {{ product.description }}</p>
                <p>prix: {{ product.price }} €</p>
                <a href="{{path('cart_add',{id:product.id}) }}">Ajouter au panier</a>
                {# <a href="{{path('card_add')}}">Ajouter au panier</a> #}
            </div>

        </div>
    {% endfor %}
</div>
{# Section Les plats #}
<h2 class="mt-5">Plats:</h2>
<div class="trait"></div>

<div class="containeur_produit">
   {% for product in plats %}
            <div class="card-body">
            <h5 class="card-title">{{ product.title }}</h5>
                <img src="{{ asset('img/products') }}/{{ product.image }}" class="card-img" alt="{{ product.title }}">

                <h5 class="card-title">{{ product.title }}</h5>
                <p>type: {{ product.type }}</p>
                <p>categorie: {{ product.category }}</p>
                <p>prix: {{ product.price }} €</p>
                <a href="{{path('cart_add',{id:product.id}) }}">Ajouter au panier</a>
            </div>
        </div>
    {% endfor %}
    
</div>

{# Section Les dessert #}
<h2 class="mt-5">Desserts:</h2>
<div class="trait"></div>
<div class="containeur_produit">
   {% for product in desserts %}
            <div class="card-body">
                <h5 class="card-title">{{ product.title }}</h5>

                <p>type: {{ product.type }}</p>
                <p>categorie: {{ product.category }}</p>
                <p>prix: {{ product.price }} €</p>
                <a href="{{path('cart_add',{id:product.id}) }}">Ajouter au panier</a>
            </div>

        </div>
    {% endfor %}
</div>

	</section>
{% endblock %}